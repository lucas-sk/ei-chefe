---
import GTM from '@/components/gtm.astro';
import MetaPixel from '@/components/meta-pixel.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Preconnect para Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload recursos críticos -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript
      ><link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      /></noscript
    >
    <link
      rel="preload"
      as="image"
      href="/images/bg-hero.webp"
      type="image/webp"
      fetchpriority="high"
    />
    <link
      rel="preconnect"
      href="https://www.googletagmanager.com"
      crossorigin
    />
    <!-- <link rel="preconnect" href="https://connect.facebook.net" crossorigin /> -->
    <link rel="dns-prefetch" href="https://www.facebook.com" />

    <!-- Favicon (considere adicionar mais formatos) -->
    <link
      rel="icon"
      type="image/webp"
      sizes="32x32"
      href="/favicon-32x32.webp"
    />
    <link
      rel="icon"
      type="image/webp"
      sizes="16x16"
      href="/favicon-16x16.webp"
    />

    <!-- SEO Básico -->
    <title>Ei Chefe Ads | Luanderson Tráfego Pago</title>
    <meta
      name="description"
      content="Ei, Chefe Ads é um serviço premium de gestão de tráfego pago, voltado para clientes exigentes que desejam aumentar vendas e otimizar a performance das campanhas."
    />
    <meta
      name="keywords"
      content="tráfego pago, gestão de anúncios, marketing digital, google ads, facebook ads"
    />
    <meta name="author" content="Luanderson" />
    <meta
      name="robots"
      content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    />
    <link rel="canonical" href="https://eichefeads.com.br/" />

    <!-- Open Graph / Facebook -->
    <meta property="og:url" content="https://eichefeads.com.br/" />
    <meta
      property="og:site_name"
      content="Ei Chefe Ads | Luanderson Tráfego Pago"
    />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Ei Chefe Ads | Luanderson Tráfego Pago"
    />
    <meta
      property="og:description"
      content="Ei, Chefe Ads é um serviço premium de gestão de tráfego pago, voltado para clientes exigentes que desejam aumentar vendas e otimizar a performance das campanhas."
    />
    <meta property="fb:pages" content="" />
    <meta property="fb:admins" content="" />
    <meta property="fb:app_id" content="" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Ei Chefe Ads | Luanderson Tráfego Pago"
    />
    <meta
      name="twitter:description"
      content="Ei, Chefe Ads é um serviço premium de gestão de tráfego pago, voltado para clientes exigentes que desejam aumentar vendas e otimizar a performance das campanhas."
    />
    <meta name="twitter:site" content="" />
    <meta name="twitter:creator" content="" />

    <!-- Fontes removidas - carregadas via preload otimizado acima -->

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Feed para Ei Chefe Ads | Luanderson Tráfego Pago »"
      href="https://eichefeads.com.br/feed/"
    />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- Analytics -->
    <GTM />
    <MetaPixel pixelId="640767321129181" />
  </head>
  <body>
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-KSMJ2SG"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <slot />
  </body>
</html>

<style>
  /* Critical CSS inline para evitar reflow */
  html {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    font-family:
      'Poppins',
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
    scroll-behavior: smooth;
  }

  /* Prevenir layout shift */
  img,
  video {
    max-width: 100%;
    height: auto;
  }

  /* Otimizar rendering */
  * {
    box-sizing: border-box;
  }

  /* Prevenir FOIT (Flash of Invisible Text) */
  body {
    font-display: swap;
  }
</style>
